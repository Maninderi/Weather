@page
@model WeatherApp.Pages.IndexModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Flash UI - Tectonic Weather</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;800&family=JetBrains+Mono:wght@400;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --bg-deep: #0a0c10;
            --tile-bg: #161a22;
            --tile-border: #262c3a;
            --accent-blue: #3b82f6;
            --accent-cyan: #06b6d4;
            --text-main: #f8fafc;
            --text-dim: #94a3b8;
            --shadow-tectonic: 0 10px 30px -5px rgba(0, 0, 0, 0.7), 0 0 0 1px rgba(255, 255, 255, 0.05);
            --transition: all 0.3s cubic-bezier(0.2, 0.8, 0.2, 1);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background-color: var(--bg-deep);
            color: var(--text-main);
            font-family: 'Inter', sans-serif;
            overflow-x: hidden;
            min-height: 100vh;
            display: flex;
        }

        /* Sidebar Navigation */
        aside {
            width: 80px;
            background: var(--tile-bg);
            border-right: 1px solid var(--tile-border);
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 2rem 0;
            z-index: 100;
        }

        .nav-item {
            width: 48px;
            height: 48px;
            border-radius: 12px;
            margin-bottom: 1.5rem;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: var(--transition);
            color: var(--text-dim);
            border: 1px solid transparent;
        }

        .nav-item:hover, .nav-item.active {
            background: var(--accent-blue);
            color: white;
            box-shadow: 0 0 15px rgba(59, 130, 246, 0.5);
        }

        /* Main Layout */
        main {
            flex: 1;
            padding: 2rem;
            max-width: 1400px;
            margin: 0 auto;
            width: 100%;
        }

        header {
            display: flex;
            justify-content: space-between;
            align-items: flex-end;
            margin-bottom: 2.5rem;
        }

        .location-info h1 {
            font-size: 2.5rem;
            font-weight: 800;
            letter-spacing: -1px;
        }

        .location-info p {
            color: var(--text-dim);
            font-family: 'JetBrains Mono', monospace;
            text-transform: uppercase;
            font-size: 0.8rem;
        }

        /* Tectonic Grid */
        .tectonic-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            grid-template-rows: auto auto;
            gap: 1.5rem;
        }

        .tile {
            background: var(--tile-bg);
            border: 1px solid var(--tile-border);
            border-radius: 20px;
            padding: 1.5rem;
            box-shadow: var(--shadow-tectonic);
            position: relative;
            transition: var(--transition);
            overflow: hidden;
        }

        .tile:hover {
            transform: translateY(-5px) scale(1.01);
            border-color: var(--accent-blue);
            box-shadow: 0 20px 40px -10px rgba(0, 0, 0, 0.8);
        }

        .tile-large {
            grid-column: span 2;
            grid-row: span 2;
            background: linear-gradient(135deg, #1e293b 0%, #0f172a 100%);
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        /* Typography & Data */
        .mono {
            font-family: 'JetBrains Mono', monospace;
        }

        .label {
            color: var(--text-dim);
            font-size: 0.75rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: 1rem;
            display: block;
        }

        .hero-temp {
            font-size: 8rem;
            font-weight: 800;
            line-height: 1;
            background: linear-gradient(to bottom, #fff, #64748b);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .status-badge {
            display: inline-block;
            padding: 0.5rem 1rem;
            background: rgba(59, 130, 246, 0.1);
            border: 1px solid var(--accent-blue);
            color: var(--accent-blue);
            border-radius: 100px;
            font-size: 0.8rem;
            font-weight: 600;
        }

        /* Forecast Bar */
        .forecast-row {
            display: flex;
            justify-content: space-between;
            margin-top: 2rem;
            padding-top: 1.5rem;
            border-top: 1px solid rgba(255,255,255,0.05);
        }

        .forecast-day {
            text-align: center;
        }

        .forecast-day .day {
            font-size: 0.7rem;
            color: var(--text-dim);
            margin-bottom: 0.5rem;
        }

        .forecast-day .temp {
            font-weight: 700;
            font-size: 1.1rem;
        }

        /* Specific Tiles */
        .data-value {
            font-size: 2rem;
            font-weight: 700;
        }

        .unit {
            font-size: 1rem;
            color: var(--text-dim);
            margin-left: 4px;
        }

        .progress-bar {
            width: 100%;
            height: 6px;
            background: #1e293b;
            border-radius: 10px;
            margin-top: 1rem;
            overflow: hidden;
        }

        .progress-fill {
            height: 100%;
            background: var(--accent-cyan);
            border-radius: 10px;
        }

        /* Interaction Elements */
        .search-bar {
            background: var(--tile-bg);
            border: 1px solid var(--tile-border);
            border-radius: 12px;
            padding: 0.8rem 1.5rem;
            color: white;
            width: 300px;
            font-family: inherit;
            outline: none;
            transition: var(--transition);
        }

        .search-bar:focus {
            border-color: var(--accent-blue);
            width: 350px;
        }

        .chart-mock {
            height: 60px;
            display: flex;
            align-items: flex-end;
            gap: 4px;
            margin-top: 1rem;
        }

        .chart-bar {
            flex: 1;
            background: var(--accent-blue);
            opacity: 0.5;
            border-radius: 2px 2px 0 0;
            transition: var(--transition);
        }

        .chart-bar:hover {
            opacity: 1;
            transform: scaleY(1.1);
        }

        /* Background Glow */
        .glow {
            position: fixed;
            top: -10%;
            right: -10%;
            width: 600px;
            height: 600px;
            background: radial-gradient(circle, rgba(59, 130, 246, 0.1) 0%, rgba(0,0,0,0) 70%);
            pointer-events: none;
            z-index: -1;
        }

    </style>
</head>
<body>

    <div class="glow"></div>

    <aside>
        <div class="nav-item active">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path><polyline points="9 22 9 12 15 12 15 22"></polyline></svg>
        </div>
        <div class="nav-item">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="8"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line></svg>
        </div>
        <div class="nav-item">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 2v2M12 20v2M4.93 4.93l1.41 1.41M17.66 17.66l1.41 1.41M2 12h2M20 12h2M6.34 17.66l-1.41 1.41M19.07 4.93l-1.41 1.41"></path></svg>
        </div>
        <div style="margin-top: auto;">
            <div class="nav-item">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="3"></circle><path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2-2v.09A1.65 1.65 0 0 0 15 4.6a1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z"></path></svg>
            </div>
        </div>
    </aside>

    <main>
        <header>
            <div class="location-info">
                <p class="mono">Current Location // 55.7558° N, 37.6173° E</p>
                <h1>Москва, Россия</h1>
            </div>
            <div>
                <input type="text" class="search-bar" placeholder="Поиск города (например: Токио)...">
            </div>
        </header>

        <section class="tectonic-grid">
            <!-- Main Hero Tile -->
            <div class="tile tile-large">
                <div>
                    <span class="status-badge">Ясно / Солнечно</span>
                    <div class="hero-temp mono">@(Model.Weather?.Temperature ?? 0)°</div>
                    <div style="font-size: 1.2rem; color: var(--text-dim);">Ощущается как <span class="mono" style="color: white;">@(Model.Weather?.Temperature ?? 0)°</span></div>
                </div>

                <div class="forecast-row">
                    <div class="forecast-day">
                        <div class="day mono">ПН</div>
                        <div class="temp">24°</div>
                    </div>
                    <div class="forecast-day">
                        <div class="day mono">ВТ</div>
                        <div class="temp">22°</div>
                    </div>
                    <div class="forecast-day">
                        <div class="day mono">СР</div>
                        <div class="temp">19°</div>
                    </div>
                    <div class="forecast-day">
                        <div class="day mono">ЧТ</div>
                        <div class="temp">21°</div>
                    </div>
                    <div class="forecast-day">
                        <div class="day mono">ПТ</div>
                        <div class="temp">25°</div>
                    </div>
                    <div class="forecast-day">
                        <div class="day mono">СБ</div>
                        <div class="temp">27°</div>
                    </div>
                </div>
            </div>

            <!-- Wind Speed -->
            <div class="tile">
                <span class="label">Скорость ветра</span>
                <div class="data-value mono">@(Model.Weather?.WindSpeed ?? 0)<span class="unit">км/ч</span></div>
                <div class="chart-mock">
                    <div class="chart-bar" style="height: 30%;"></div>
                    <div class="chart-bar" style="height: 50%;"></div>
                    <div class="chart-bar" style="height: 80%;"></div>
                    <div class="chart-bar" style="height: 60%;"></div>
                    <div class="chart-bar" style="height: 40%;"></div>
                    <div class="chart-bar" style="height: 90%;"></div>
                    <div class="chart-bar" style="height: 70%;"></div>
                </div>
                <div style="margin-top: 1rem; font-size: 0.8rem; color: var(--text-dim);">Направление: <span style="color: white;">@(Model.Weather?.WindDirection ?? 0)°</span></div>
            </div>

            <!-- UV Index -->
            <div class="tile">
                <span class="label">УФ-Индекс</span>
                <div class="data-value mono">4<span class="unit">Средний</span></div>
                <div class="progress-bar">
                    <div class="progress-fill" style="width: 40%;"></div>
                </div>
                <div style="margin-top: 1rem; font-size: 0.8rem; color: var(--text-dim);">Используйте защиту до 16:00</div>
            </div>

            <!-- Humidity -->
            <div class="tile">
                <span class="label">Влажность</span>
                <div class="data-value mono">@(Model.Weather?.RelativeHumidity ?? 0)<span class="unit">%</span></div>
                <div style="margin-top: 1.5rem; display: flex; justify-content: space-between; font-size: 0.8rem;">
                    <span class="mono">0%</span>
                    <span class="mono">100%</span>
                </div>
                <div class="progress-bar">
                    <div class="progress-fill" style="width: @(Model.Weather?.RelativeHumidity ?? 0)%; background: var(--accent-blue);"></div>
                </div>
                <div style="margin-top: 1rem; font-size: 0.8rem; color: var(--text-dim);">Точка росы сейчас 12°</div>
            </div>

            <!-- Pressure -->
            <div class="tile">
                <span class="label">Давление</span>
                <div class="data-value mono">@(Model.Weather?.SurfacePressure ?? 0)<span class="unit">hPa</span></div>
                <div style="margin-top: 1rem; color: var(--accent-cyan); font-size: 0.8rem; font-weight: 600;">↑ Растет постепенно</div>
            </div>

        </section>

        <!-- Dynamic Data Log (Management Rule Aspect) -->
        <section style="margin-top: 3rem;">
            <h3 style="margin-bottom: 1.5rem; font-size: 1rem; text-transform: uppercase; letter-spacing: 2px; color: var(--text-dim);">Архив логов станции #MSK-04</h3>
            <div style="background: var(--tile-bg); border-radius: 12px; border: 1px solid var(--tile-border); overflow: hidden;">
                <table style="width: 100%; border-collapse: collapse; text-align: left; font-family: 'JetBrains Mono', monospace; font-size: 0.85rem;">
                    <thead>
                        <tr style="background: rgba(255,255,255,0.02); color: var(--text-dim);">
                            <th style="padding: 1rem;">TIMESTAMP</th>
                            <th style="padding: 1rem;">ID</th>
                            <th style="padding: 1rem;">PARAMETER</th>
                            <th style="padding: 1rem;">VALUE</th>
                            <th style="padding: 1rem;">STATUS</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var log in Model.Logs)
                        {
                            <tr style="border-top: 1px solid var(--tile-border);">
                                <td style="padding: 1rem;">@log.Timestamp.ToString("HH:mm:ss")</td>
                                <td style="padding: 1rem; color: var(--accent-blue);">@log.SensorId</td>
                                <td style="padding: 1rem;">@log.Parameter</td>
                                <td style="padding: 1rem;">@log.Value</td>
                                <td style="padding: 1rem;"><span style="color: @(log.Status == "STABLE" ? "#4ade80" : "#fbbf24");">● @log.Status</span></td>
                            </tr>
                        }
                        @if (!Model.Logs.Any())
                        {
                            <tr style="border-top: 1px solid var(--tile-border);">
                                <td colspan="5" style="padding: 1rem; text-align: center;">Нет данных</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </section>
    </main>

    <script>
        // Simple interactivity for the Tectonic tiles
        document.querySelectorAll('.tile').forEach(tile => {
            tile.addEventListener('mousemove', (e) => {
                const rect = tile.getBoundingClientRect();
                const x = e.clientX - rect.left;
                const y = e.clientY - rect.top;

                tile.style.setProperty('--mouse-x', `${x}px`);
                tile.style.setProperty('--mouse-y', `${y}px`);

                // Subtle 3D tilt
                const centerX = rect.width / 2;
                const centerY = rect.height / 2;
                const rotateX = (y - centerY) / 20;
                const rotateY = (centerX - x) / 20;

                tile.style.transform = `perspective(1000px) rotateX(${rotateX}deg) rotateY(${rotateY}deg) translateY(-5px) scale(1.01)`;
            });

            tile.addEventListener('mouseleave', () => {
                tile.style.transform = `perspective(1000px) rotateX(0deg) rotateY(0deg) translateY(0) scale(1)`;
            });
        });
    </script>
</body>
</html>
